{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "isolatedModules": false,
    "skipLibCheck": true,
    "removeComments": true,
  },
  "include": [
    "src",
    "src/custom.d.ts"
  ],
  "exclude": ["node_modules", "build", "dist", "example", "rollup.config.js"]
}